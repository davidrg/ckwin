fopen /read \%c gloss.html
if fail exit 1
fopen /write \%o newgloss.html
if fail exit 1
while 1 {
    fread /line \%c line
    if fail break
    if \findex(<dt><b>\60a\32name,\m(line)) {
        show mac line
        void \fsplit(\m(line),&a,\34,ALL)
        .line := <dt id="\&a[2]"\&a[3]
    }
    fwrite /line \%o \m(line)
}
echo Done.
exit
