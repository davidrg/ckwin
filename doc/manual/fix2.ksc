fopen /read \%c gloss.html
if fail exit 1
fopen /write \%o newgloss.html
if fail exit 1
while 1 {
    fread /line \%c line
    if fail break
    if \findex(<dt,\m(line)) {
show mac line
        if \findex(/b,\m(line)) {
xecho +
            show mac line
            .line := \freplace(\m(line),</b>,)
        }
    }
    fwrite /line \%o \m(line)
}
echo Done.
exit
